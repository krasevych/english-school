{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "baseUrl": "src",
    "outDir": "dist",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "types": [
      "uglify-js",
      "tapable",
      "node"
    ]
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compileOnSave": false
}